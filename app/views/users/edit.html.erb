<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-lg-offset-4 col-sm-4 col-md-4">

    <div class="edit_gravatar">
      <%= gravatar_for @user %>
      <%= link_to "change",  "http://gravatar.com/emails", :target => '_blank' %>
    </div>

    <%= form_for @user, :html => {:class => "form form-signup"} do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-small btn-primary" %>
    <% end %>

  </div>
</div>
